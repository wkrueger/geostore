{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "pretty": false,
    "lib": ["ESNext"]
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
